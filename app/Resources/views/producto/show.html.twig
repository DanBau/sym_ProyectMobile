{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-10 mx-auto">
                <div class="card">
                    <h5 class="card-header">Producto</h5>
                    <div class="card-body">

                        <table class="table-borderless table-responsive">
                            <tr scope="row" class="pb-2">
                                <td ><h6 class="text-muted"> Nombre</h6></td>
                                <td>{{ producto.nombre }}</td>
                            </tr>
                            <tr scope="row" class="pb-2">
                                <td><h6 class="text-muted">Bateria</h6></td>
                                <td>{{ producto.bateria }}</td>
                            </tr>
                            <tr scope="row" class="pb-2">
                                <td><h6 class="text-muted">RAM</h6></td>
                                <td>{{ producto.ram }}</td>
                            </tr>
                            <tr scope="row" class="pb-2">
                                <td><h6 class="text-muted">ROM</h6></td>
                                <td>{{ producto.rom }}</td>
                            </tr>
                            <tr scope="row" class="pb-2">
                                <td><h6 class="text-muted">Sistema</h6></td>
                                <td>{{ producto.sistema }}</td>
                            </tr>
                            <tr scope="row" class="pb-2">
                                <td><h6 class="text-muted">Pulgadas</h6></td>
                                <td>{{ producto.pulgadas}}</td>
                            </tr>
                            <tr scope="row" class="pb-2">
                                <td><h6 class="text-muted">Resolucion</h6></td>
                                <td>{{ producto.resolucion}}</td>
                            </tr>
                            <tr scope="row" class="pb-2">
                                <td><h6 class="text-muted">Marca</h6></td>
                                <td>{{ producto.marca}}</td>
                            </tr>
                            <tr scope="row" class="pb-2">
                                <td><h6 class="text-muted">User</h6></td>
                                <td>{{ producto.user}}</td>
                            </tr>

                        </table>

                    </div>
                    <ul class="list-inline-group mt-5 card-footer mb-0">

                        <li class="list-inline-item">
                            <a  class="btn btn-outline-secondary" href="{{ path('producto_edit', { 'id': producto.id }) }}">Edit</a>
                        </li>
                        <li class="list-inline-item">
                            {{ form_start(delete_form) }}
                            <input   class="btn btn-outline-danger" type="submit" value="Delete">
                            {{ form_end(delete_form) }}
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
{% endblock %}